.modal__
  &background
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    display: flex;
    align-items: center
    justify-content: center
    background-color: rgba(1, 1, 1, 0.3)
  &dialog
    width: 500px
    background-color: #ffff
    padding: 15px;
  &header
    position: relative
  &title
    font-size: 20px
    margin: 0
    padding: 0
  &btn-close
    position: absolute
    right: 0
    top: -10px
    font-size: 30px
    color: gray
    cursor: pointer
  &body
    padding: 15px 0
  &footer
    display: flex
    justify-content center
  &btn
    &-no
      margin-left: 15px

// for style guide
.rsg--body-0
  .modal__background
    position: static
    width: 100%
    height: 100%
    min-height: 600px


